#ifndef OPERATOR
#define OPERATOR(X)
#endif
#ifndef BINARY_OPERATOR
#define BINARY_OPERATOR(X) OPERATOR(X)
#endif
#ifndef UNARY_OPERATOR
#define UNARY_OPERATOR(X) OPERATOR(X)
#endif

// Standard binary operations
// unsigned, float operation decorators is determined by type.
BINARY_OPERATOR(Add)
BINARY_OPERATOR(Sub)
BINARY_OPERATOR(Mul)
BINARY_OPERATOR(Div)
BINARY_OPERATOR(Rem)

// Logical operations 
BINARY_OPERATOR(Shl)  // Shift left
BINARY_OPERATOR(LShr) // Logical shift right
BINARY_OPERATOR(AShr) // Arithematic shift right
BINARY_OPERATOR(And) 
BINARY_OPERATOR(Or)
BINARY_OPERATOR(Xor)

// Assignment
BINARY_OPERATOR(Assign)

// Comparison
BINARY_OPERATOR(Greater)
BINARY_OPERATOR(Less)
BINARY_OPERATOR(GreaterEqual)
BINARY_OPERATOR(LessEqual)
BINARY_OPERATOR(Equal)
BINARY_OPERATOR(NotEqual)

// Standard Unary Operator
UNARY_OPERATOR(Addr)
UNARY_OPERATOR(Dereference)
UNARY_OPERATOR(Not)
UNARY_OPERATOR(Increment)
UNARY_OPERATOR(Decrement)
